<h1><%= @cocktail.name %></h1>

<h4>Ingredients</h4>
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "Remove",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
  </li>
<% end %>

<%= link_to 'Add new dose', new_cocktail_dose_path(@cocktail) %>

<%= link_to 'Go back', cocktails_path %>
