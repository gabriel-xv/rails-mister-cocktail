<div class="container col-6">
  <h1 class="mt-3 mb-3">New dose</h1>

  <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%#= f.input :ingredient_id, collection: Ingredient.all.each { |ingredient| ingredient.name } %>

    </div>

    <div class="form-actions d-inline-block w-100">
      <button type="button" class="btn btn-outline-success w-100 mb-3"><%= f.button :submit %></button>
      <button type="button" class="btn btn-outline-secondary w-100 p-2"><%= link_to 'Cancel', cocktails_path %></button>
    </div>
  <% end %>
</div>
